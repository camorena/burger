<div class="col-6">
  <div id="eat-burger" class="row">
    {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
  </div>
</div>
<div class="col-3">
  <div id="new-burger" class="row">
    <form class="create-form">
      <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>

<div class="col-3">
  <div id="list-burger" class="row">
    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-orders devoured=false}} {{/if}} {{/each}}
    </ul>
  </div>
</div>
</div>